{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "noEmitHelpers": true
    },
    "compileOnSave": false,
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}